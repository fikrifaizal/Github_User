<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GithubUser" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_grey_800</item>
        <item name="colorPrimaryVariant">@color/dark_grey_900</item>
        <item name="colorOnPrimary">@color/black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <!--  TextView  -->
    <style name="TextColor.White" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextColor.Black" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
    </style>

    <!--  Icon  -->
    <style name="Icon.Company">
        <item name="android:src">@drawable/ic_company_white</item>
    </style>

    <style name="Icon.Location">
        <item name="android:src">@drawable/ic_location_white</item>
    </style>

    <!--  SplashScreen  -->
    <style name="Splashscreen">
        <item name="android:background">?android:attr/windowBackground</item>
    </style>
</resources>