<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GithubUser" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/github_bright</item>
        <item name="colorPrimaryVariant">@color/github_normal</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <!--  TextView  -->
    <style name="TextColor" parent="Widget.AppCompat.TextView"/>

    <style name="TextColor.White" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextColor.Black" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextColor.Black.Large">
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextColor.Black.Medium">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextColor.Black.RowMedium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextColor.Black.Small">
        <item name="android:textSize">14sp</item>
    </style>

    <!--  Icon  -->
    <style name="Icon">
        <item name="android:layout_width">20dp</item>
        <item name="android:layout_height">20dp</item>
    </style>

    <style name="Icon.Company">
        <item name="android:src">@drawable/ic_company_black</item>
    </style>

    <style name="Icon.Location">
        <item name="android:src">@drawable/ic_location_black</item>
    </style>

    <!--  SplashScreen  -->
    <style name="Splashscreen">
        <item name="android:background">@color/github_bright</item>
    </style>
</resources>